<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFF8E1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            android:textColor="#795548" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Bakery Hub! This app makes it simple for you to explore and add your favorite bakery items to your cart. Enjoy a quick and easy way to shop for delicious cakes, cookies, donuts, and more!"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:textColor="#5D4037"
            android:paddingBottom="24dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What You Can Do:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="#795548" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Browse bakery products with their prices.\n- Add products to your cart and view the total.\n- Click the checkout button to place an order."
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:textColor="#5D4037"
            android:paddingBottom="24dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for using Bakery Hub! We hope you enjoy shopping with us."
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:textColor="#5D4037"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/ratingBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:text="Rate the App"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingBarTitle"
            android:progressTint="@color/design_default_color_error"
            android:progressBackgroundTint="@color/white"
            android:layout_gravity="center_horizontal"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="0"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Logout"
            android:textSize="16sp"
            />

    </LinearLayout>
</ScrollView>
